{% block html_head %}
    {% include 'html-header.twig' %}
{% endblock %}

<body class="{{ body_class }} baseContainer" data-template="base.twig">
<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="site-header">
    {% block header %}
        {% include 'header.twig' %}
    {% endblock %}
</header>

<main id="content" role="main" class="site-main">
    <div class="wrapper {{ sidebar_class }}">
        {% include 'menu.twig' %}
        {% block content %}
            Sorry, no content
        {% endblock %}
    </div>
</main>

{% block footer %}
    <footer class="site-footer row--lg">
        {% include 'footer.twig' %}
    </footer>
    {{ function('wp_footer') }}
{% endblock %}

</body>
</html>
